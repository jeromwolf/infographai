# Production Environment Variables
# InfoGraphAI - AI Video Generation Platform

# Node Environment
NODE_ENV=production

# API Configuration
API_PORT=4000
API_HOST=0.0.0.0

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.infographai.com
NEXT_PUBLIC_WS_URL=wss://api.infographai.com

# Database
DATABASE_URL=postgresql://infograph:infograph123@postgres:5432/infographai
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://redis:6379
REDIS_CACHE_TTL=3600

# Authentication
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Cost Monitoring
DAILY_COST_LIMIT=10.00
HOURLY_COST_LIMIT=2.00
COST_ALERT_THRESHOLD=8.00
COST_ALERT_EMAIL=admin@infographai.com

# Storage
STORAGE_TYPE=s3
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=infographai-videos
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Video Processing
FFMPEG_PATH=/usr/local/bin/ffmpeg
VIDEO_OUTPUT_DIR=/app/output/videos
VIDEO_TEMP_DIR=/tmp/videos
MAX_VIDEO_DURATION=600
DEFAULT_VIDEO_RESOLUTION=1920x1080
DEFAULT_VIDEO_FPS=30
DEFAULT_VIDEO_BITRATE=5000k

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_JOBS_PER_WORKER=10
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# Security
CORS_ORIGIN=https://infographai.com,https://www.infographai.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
HELMET_CSP_ENABLED=true

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info
LOG_FILE=/var/log/infographai/app.log

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@infographai.com
SMTP_PASS=your-smtp-password

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
ENABLE_AI_GENERATION=true
ENABLE_VIDEO_UPLOAD=true
ENABLE_TEMPLATE_SYSTEM=true
ENABLE_COST_MONITORING=true
ENABLE_KOREAN_SUBTITLE=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="시스템 점검 중입니다. 잠시 후 다시 시도해주세요."